<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/padding_start"
    android:paddingLeft="@dimen/padding_start"
    android:paddingRight="@dimen/padding_start"
    android:paddingEnd="@dimen/padding_end" xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/stock_symbol"
        style="@style/StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        tools:text="@string/txt_google"
    />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
    >
        <TextView
            android:id="@+id/bid_price"
            style="@style/BidPriceTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_end"
            android:paddingLeft="@dimen/padding_start"
            android:paddingRight="@dimen/padding_end"
            tools:text="@string/txt_1000"
        />
        <TextView
            android:id="@+id/change"
            android:background="@drawable/percent_change_pill"
            style="@style/PercentChangeTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_3dp"
            android:paddingEnd="@dimen/padding_3dp"
            android:paddingLeft="@dimen/padding_3dp"
            android:paddingRight="@dimen/padding_3dp"
            tools:text="@string/txt_100"
        />
    </LinearLayout>
</LinearLayout>
